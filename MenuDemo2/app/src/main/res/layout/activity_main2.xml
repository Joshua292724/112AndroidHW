<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/main_course_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主餐："
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/main_course_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_course_label"
        android:layout_marginTop="5dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/side_dish_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="附餐："
        android:textSize="20sp"
        android:layout_below="@id/main_course_detail"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/side_dish_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/side_dish_label"
        android:layout_marginTop="5dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/drinks_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="飲料："
        android:textSize="20sp"
        android:layout_below="@id/side_dish_detail"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/drinks_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drinks_label"
        android:layout_marginTop="5dp"
        android:textSize="16sp"/>

</RelativeLayout>
