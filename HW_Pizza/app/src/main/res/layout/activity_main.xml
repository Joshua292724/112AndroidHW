<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <CheckBox
        android:id="@+id/chk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="312dp"
        android:checked="false"
        android:text="漢堡"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <CheckBox
        android:id="@+id/chk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:checked="false"
        android:text="薯條"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chk1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <CheckBox
        android:id="@+id/chk3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:checked="false"
        android:text="飲料"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chk4"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <CheckBox
        android:id="@+id/chk4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:checked="false"
        android:text="玉米濃湯"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chk2"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <CheckBox
        android:id="@+id/chk5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:checked="false"
        android:text="咖啡"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chk3" />

    <TextView
        android:id="@+id/showOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="92dp"
        android:layout_marginRight="16dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chk3"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showOrder"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <ImageView
            android:id="@+id/output1"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@mipmap/berger"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="197dp"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/output2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@mipmap/fries"
            tools:layout_editor_absoluteX="76dp"
            tools:layout_editor_absoluteY="197dp"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/output3"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@mipmap/drink"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="197dp"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/output4"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@mipmap/soup"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="197dp"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/output5"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@mipmap/coffee"
            tools:layout_editor_absoluteX="256dp"
            tools:layout_editor_absoluteY="197dp"
            tools:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>